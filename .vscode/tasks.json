{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Tailwind CSS Watch",
        "type": "shell",
        "command": "npx",
        "args": [
            "tailwindcss",
            "-i",
            "tailwind.css",
            "-o",
            "./site/css/main.css",
            "--watch"
        ],
        "presentation": {
            "reveal": "always",
            "panel": "dedicated",
            "group": "dev-server"
        },
        "isBackground": true,
        "problemMatcher": []
    },
    {
        "label": "Start HTTP Server",
        "type": "shell",
        "command": "python3",
        "args": [
            "-m",
            "http.server",
            "-d",
            "site/",
            "8091"
        ],
        "presentation": {
            "reveal": "always",
            "panel": "dedicated",
            "group": "dev-server"
        },
        "isBackground": true,
        "problemMatcher": []
    },
    {
      "label": "Dev Environment",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Tailwind CSS Watch",
        "Start HTTP Server"
      ],
      "presentation": {
          "reveal": "always",
          "panel": "shared",
          "group": "dev-server"
      },
      "problemMatcher": []
    }
  ]
}